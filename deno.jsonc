{
  "tasks": {
    "build": "deno fmt && deno run -A scripts/build_npm.ts",
    "check": "deno lint && deno test",
    "publish": "deno check && deno task build && cd npm && npm publish --access public"
  },
  "fmt": {
    "files": {
      "exclude": ["npm"]
    }
  },
  "lint": {
    "files": {
      "exclude": ["npm"]
    }
  },
  "test": {
    "files": {
      "exclude": ["npm"]
    }
  }
}
